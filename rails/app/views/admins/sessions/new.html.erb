<div class="row d-flex justify-content-center mt-5 px-3">
  <div class="col-md-6">
    <h2 class="text-center"><%= t('.admin_sign_in') %></h2>
    <%= form_with model: @admin, url: admin_session_path, local: true, class: 'mt-5' do |f| %>
      <%= render "admins/shared/error_messages", resource: resource %>
      <div class="form-group">
        <%= f.label :name, class: 'form-label' %>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control #{'alert alert-danger' if resource.errors[:name].any?}" %>
      </div>
    
      <div class="form-group mt-4">
        <%= f.label :password, class: 'form-label' %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control #{'alert alert-danger' if resource.errors[:password].any?}" %>
      </div>
    
      <div class="actions mt-5 text-center">
        <%= f.submit t('.sign_in'), class: 'btn btn-secondary col-4' %>
      </div>
    <% end %>
    
    <%= render "admins/shared/links" %>
  </div>
</div>
