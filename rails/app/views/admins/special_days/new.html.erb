<% content_for(:title, "特別日作成") %>

<div class="row d-flex justify-content-center mt-5 px-3">
  <div class="col-md-6">
    <div class="d-flex justify-content-between align-items-center">
      <h2>特別日作成</h2>
    </div>
    <%= form_with model: @special_day, url: admins_special_days_path, local: true, class: 'mt-5' do |f| %>
      <%= render "layouts/error_messages", resource: @special_day %>
      <div class="form-group mt-4">
        <%= f.label :start_date, "開始日", class: 'form-label' %>
        <div class="d-flex align-items-end">
          <%= f.date_field :start_date, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group mt-4">
        <%= f.label :end_date, "終了日", class: 'form-label' %>
        <div class="d-flex align-items-end">
          <%= f.date_field :end_date, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group mt-4">
        <%= f.label :description, "説明" , class: 'form-label' %>
        <div class="d-flex align-items-end">
          <%= f.text_field :description, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group mt-4">
        <%= f.label :wage_increment, "時給加算額" , class: 'form-label' %>
        <div class="d-flex align-items-end">
          <%= f.number_field :wage_increment, min: 0, class: 'form-control' %>
          <span class="ml-2">円</span>  
        </div>
      </div>
      <div class="form-group mt-4">
        <%= f.label :allowance, "手当" , class: 'form-label' %>
        <div class="d-flex align-items-end">
          <%= f.number_field :allowance, min: 0, class: 'form-control' %>
          <span class="ml-2">円</span>  
        </div>
      </div>
      <div class="actions mt-5 text-center">
        <%= f.submit t('common.save'), class: 'btn btn-secondary col-4' %>
      </div>
    <% end %>
  </div>
</div>